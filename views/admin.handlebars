<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/admin.css" />
    <title>Ntombi's Coffee Shop</title>
  </head>
  <body>
    <main>
      <div class="wrapper">
        <header class="heading">
          <h1 class="primary-heading">Welcome To Ntombi's Coffee Shop</h1>
        </header>
        <div class="container">
          {{!-- <h2 class="secondary-heading">Hello, {{admin_name}}👋🏽</h2> --}}
          <h2 class="secondary-heading">Hi, Ntombi👋🏽</h2>
          <p class="working-waiters-text">Here's an indication of days that are
            fully, over and under booked:</p>
          <ul class="color-code-container">
            <li class="labels-info fully-booked">Fully</li>
            <li class="labels-info over-booked">Over</li>
            <li class="labels-info under-booked">Under</li>
            <li class="labels-info">Empty</li>
          </ul>
          <ul class="scheduled-days">
            {{#each weekdays}}
              <li class="weekday labels-info">{{this.weekdays}} 📆</li>
            {{/each}}
          </ul>
          <form action="/admin" method="GET" id="schedule"></form>
          <form action="/resetschedule" method="GET" id="reset-schedule"></form>
          <div class="schedule-buttons">
            <button class="schedule-btn btn" type="submit" form="schedule">See
              Scheduled days</button>
            <button
              class="reset-schedule-btn btn"
              form="reset-schedule"
              type="submit"
            >Reset Schedule</button>
          </div>
          <p class="working-waiters-text">Here's who on the clock⏰for this
            week📆:</p>
          <div id="waiters-working-days">
          </div>
          <table class="schedule-table">
            <tr>
              {{#each scheduleObject}}
                <th>
                  {{@key}}
                </th>
              {{/each}}
            </tr>
            <tr>
              {{#each scheduleObject}}
                <td>
                  {{#each this}} {{this}} <br /> {{/each}}
                </td>
              {{/each}}
            </tr>
          </table>
        </div>
      </div>
    </main>
    <script src="/frontendjs/index.js"></script>
  </body>
</html>